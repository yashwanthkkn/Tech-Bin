<div class="container  mt-5 px-1">
	<div class="card text-white bg-dark border border-white rounded">
		<div class="card-body">
			<div class="row mt-1">
				<div class="col-lg-3"><h4><i class="fa fa-user"></i> No. of Admins</h4></div>
				<div class="col-lg-3"><h4><i class="fas fa-dumpster-fire"></i> No. of Bins</h4></div>
				<div class="col-lg-3"><h4><i class="fas fa-dumpster-fire"></i> Bins in use</h4></div>
				<div class="col-lg-3"><h4><i class="fas fa-dumpster-fire"></i> Bin Available</h4></div>
			</div>
			<div class="row mt-1 pb-4 text-center border-bottom border-white">
				<div class="col-lg-3"><h2><%=admins.length %></h2></div>
				<div class="col-lg-3"><h2><%=bins.length %></h2></div>
				<div class="col-lg-3"><h2><%=unavail.length %></h2></div>
				<div class="col-lg-3"><h2><%=avail.length %></h2></div>
			</div>
			<p></p>
			<div class="container-fluid">
				<h2 class="text-center">Console Monitor</h2>
				<table class="mx-auto text-center table table-dark table-striped">
					<tr>
						<th>S.No</th>
						<th>Admin -Id</th>
						<th>Corporation</th>
						<th>Bins</th>
						<th>Bins -Id</th>
					</tr>
					<% var i = 1%>
					<% admins.forEach((admin)=>{ %>
						<tr>
						<td><%= i++ %></td>
						<td><%= admin.username %></td>
						<td><%= admin.corp %></td>
						<td><%= admin.NOB %></td>
						<td>
							<ul>
								<%admin.bins.forEach((x)=>{%>
									<li><%= x %></li>
								<% }) %>
								
							</ul>
						</td>
					</tr>	
					<% })%>
					
				</table>
			</div>
		</div>
	</div>
</div>
